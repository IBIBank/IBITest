@using IBITest.Models
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - IBI Bank</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

     
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a href="@Url.Action("Index", "CommonBiz")">
                    <img src="~/Content/Logo.png" />
                    </a>
                </div>
                <div class="float-right">
                    <p>@DateTime.Today.DayOfWeek , @DateTime.Today.ToString("MMM") @DateTime.Today.Day, @DateTime.Today.Year</p>
                </div>
                
            </div>
            <div class="content-wrapper" style="clear:left;">
                <div>
                    <h2><b>Welcome</b></h2>

                    @{
                        if(Session["User"] != null)
                        {
                            if((Session["User"] as UserRole).role.Equals("Admin"))
                            {
                                <h4> Hi <a href="@Url.Action("Dashboard", "Admin")" > @((Session["User"] as UserRole).userID) </a> !</h4> @Html.ActionLink("LogOut","LogOut","CommonBiz")                                                                
                            }
                            else if((Session["User"] as UserRole).role.Equals("Banker"))
                            {
                                <h4> Hi <a href="@Url.Action("Dashboard", "Banker")" > @((Session["User"] as UserRole).userID) </a> !</h4> @Html.ActionLink("LogOut","LogOut","CommonBiz")                                
                            }
                            else
                            {
                                <h4> Hi <a href="@Url.Action("Dashboard", "Customer")" > @((Session["User"] as UserRole).userID) </a> !</h4> @Html.ActionLink("LogOut","LogOut","CommonBiz")                                
                            }
                        }                    
                    }
                    
                </div>
            </div>
    </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - IBI Bank</p>
                </div>
            </div>
    </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>


<script>
        //kill all back button functionality
        function noBack() { window.history.forward() }
        noBack();
        window.onload = noBack;
        window.onpageshow = function (evt) { if (evt.persisted) noBack() }
        window.onunload = function () { void (0) }
    </script>
